const CheckinModal = ({ planta, onSave, onClose }) => {
    data: new Date().toISOString().split('T')[0],
    tarefas_concluidas: [],
    observacoes: ''
  const tarefasDisponiveis = [
    'rega',
    'verificacao_pragas',
    'poda',
